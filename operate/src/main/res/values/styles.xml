
<resources>
    <style name="MyEditText3" parent="android:Theme.Light.NoTitleBar">
        <item name="colorControlNormal">@android:color/holo_orange_dark</item>
        <item name="colorControlActivated">@android:color/holo_orange_dark</item>
    </style>

    <style name="ll_fill_in">

        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_marginRight">50dp</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:background">@drawable/shape_white_coner2</item>
        <item name="android:layout_marginLeft">50dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:orientation">horizontal</item>

    </style>

    <style name="ll_fill_in3">

        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:background">@drawable/shape_white_coner2</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:orientation">horizontal</item>

    </style>



    <style name="et_fill_in">

        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textColor">#958F8C</item>
        <item name="android:textSize">18sp</item>
        <item name="android:background">@null</item>
        <item name="android:paddingLeft">10dp</item>

    </style>

    <style name="tv_fill_in">

        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#958F8C</item>


    </style>


    ////////////////////////////////////

    <style name="ll_fill_in2">

        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:background">@drawable/shape_white_coner3</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:orientation">horizontal</item>

    </style>

    <style name="et_fill_in2">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textColor">#958F8C</item>
        <item name="android:textSize">18sp</item>
        <item name="android:background">@null</item>
        <item name="android:paddingLeft">10dp</item>
    </style>

    <style name="tv_fill_in2">

        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#958F8C</item>


    </style>

    <style name="AnimationPreview">
        <item name="android:windowEnterAnimation">@anim/fade_in</item>
        <item name="android:windowExitAnimation">@anim/fade_out</item>
    </style>


</resources>